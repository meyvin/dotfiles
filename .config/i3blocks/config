color=#f3f4f5
separator_block_width=15
markup=none

[battery-poly]
command=$SCRIPT_DIR/battery-poly
LABEL=BAT
interval=5

[volume-pipewire]
command=$SCRIPT_DIR/volume-pipewire/volume-pipewire
interval=once
signal=1

[ram]
command=echo -n '  '; $SCRIPT_DIR/memory | grep -E -o '^[0-9]+.[0-9]G'
interval=30

[disk-home]
command=echo -n ' '; df -h -l --output='avail' "$HOME" | grep -E -o '[0-9]+G'
interval=30

[time]
command=$SCRIPT_DIR/time
interval=1
STRFTIME_FORMAT=%d-%m-%Y %H:%M
